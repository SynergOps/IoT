// Παράδειγμα κώδικα Arduino για αποστολή μόνο αριθμητικών δεδομένων θερμοκρασίας
// σε μορφή κατάλληλη για επεξεργασία από εξωτερικό λογισμικό.
// Η έξοδος θα είναι απλά τυχαίοι αριθμοί με αλλαγή γραμμής.

void setup() {
  // Εκκίνηση σειριακής επικοινωνίας στα 9600 bps
  Serial.begin(9600);
}

void loop() {
  // --- ΠΡΟΣΟΜΟΙΩΣΗ ΑΙΣΘΗΤΗΡΑ ---
  
  // Τυχαία τιμή για δοκιμή (μεταξύ 20.00 και 30.00)
  float temperature = 20.0 + random(0, 1000) / 100.0;

  // --- ΑΠΟΣΤΟΛΗ ---
  // Στέλνουμε ΜΟΝΟ τον αριθμό και αλλαγή γραμμής
  Serial.println(temperature);

  // Καθυστέρηση 2 δευτερόλεπτα
  delay(2000);
}